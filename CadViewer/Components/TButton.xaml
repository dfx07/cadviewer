<UserControl x:Class="CadViewer.Components.TButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadViewer.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border
            BorderThickness="{Binding TBorderThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
            BorderBrush="{Binding TBorderColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Background="{Binding TBackground, RelativeSource={RelativeSource AncestorType=UserControl}}"
            CornerRadius="{Binding TCornerRadius, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Border x:Name="xTButtonBorder" BorderThickness="2" CornerRadius="1" Padding="3"
            BorderBrush="{Binding TBackground, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Background="Transparent">
            <Grid>
                <TextBlock Text="{Binding TContent, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Foreground="{Binding TColor, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="11"
                       HorizontalAlignment="Center" VerticalAlignment="Center">
                </TextBlock>
            </Grid>
        </Border>



        <!--<EventTrigger RoutedEvent="MouseLeave">
            <BeginStoryboard>
                <Storyboard>
                    <ColorAnimation Storyboard.TargetName="xTButtonBorder"
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="{Binding TBackground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>-->

        <!-- Hiệu ứng Mouse Move (Di chuyển chuột làm sáng màu) --><!--
        <EventTrigger RoutedEvent="MouseMove">
            <BeginStoryboard>
                <Storyboard>
                    <ColorAnimation Storyboard.TargetName="border"
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="CornflowerBlue" Duration="0:0:0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>-->

        <!-- Hiệu ứng khi bị Disabled --><!--
        <Trigger Property="IsEnabled" Value="False">
            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
            <Setter TargetName="border" Property="Background" Value="Gray"/>
        </Trigger>--><!--
    </UserControl.Triggers>-->
    </Border>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="MouseEnter">
            <BeginStoryboard>
                <Storyboard>
                    <ColorAnimation Storyboard.TargetName="xTButtonBorder"
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="#676767" Duration="0:0:0.2"/>
                    <ColorAnimation Storyboard.TargetName="xTButtonBorder"
                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                    To="#4475a9" Duration="0:0:0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>
