<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CadViewer.UIControls"
                    xmlns:cvt="clr-namespace:CadViewer.Converters"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Style TargetType="{x:Type local:CToastContainer}" BasedOn="{StaticResource {x:Type ContentControl}}">
        <Setter Property="Foreground" Value="{DynamicResource Cmm_TextColor}" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CToastContainer}">
                    <Grid Background="Transparent">
                        <Border Margin="3" CornerRadius="5" BorderThickness="1" Width="{TemplateBinding Width}">
                            <Border.Background>
                                <SolidColorBrush Color="{DynamicResource CompUI_Cmm_BackgroundColor}" />
                            </Border.Background>
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#3b4453" />
                            </Border.BorderBrush>
                            <Border.Effect>
                                <DropShadowEffect x:Name="PART_DropShadow" Color="Black" BlurRadius="2" Direction="0" ShadowDepth="0" Opacity="0.2" />
                            </Border.Effect>
                        </Border>
                        <Border Margin="3" Background="Transparent" Width="{TemplateBinding Width}" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MaxWidth="50" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <ContentPresenter Content="{TemplateBinding LeftContent}" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Foreground="Black" Margin="5,0,1,1" Text="{TemplateBinding Title}" HorizontalAlignment="Left"></TextBlock>
                                    <Border Grid.Row="1" Padding="5">
                                        <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}" />
                                    </Border>
                                </Grid>
                                <Grid Grid.Column="2">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <Button x:Name="PART_CloseBtn" Content="X" Width="20"></Button>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsFreeze, RelativeSource={RelativeSource Self}}" Value="True">
                            <Setter TargetName="PART_CloseBtn" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>