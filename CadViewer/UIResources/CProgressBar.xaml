                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="PART_Track" Padding="2" CornerRadius="7" BorderThickness="1">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="{DynamicResource CompUI_Cmm_BorderColor}" />
                            </Border.BorderBrush>
