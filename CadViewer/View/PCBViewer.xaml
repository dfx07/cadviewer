<UserControl x:Class="CadViewer.View.PCBViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadViewer.View"
             xmlns:com="clr-namespace:CadViewer.Common"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="450" d:DesignWidth="800"
             SizeChanged="OnPCBViewer_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#ccd5f0">
            <TextBlock Text="{Binding PCBViewModel.Name, UpdateSourceTrigger=PropertyChanged,
                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"
                   Margin="5, 5, 5, 5"/>
        </Grid>
        <Grid Grid.Row="1">
            <local:OpenGLView OpenGLContent="{Binding PCBViewModel.OpenGLControl, UpdateSourceTrigger=PropertyChanged,
                              RelativeSource={RelativeSource AncestorType=UserControl} }">
            </local:OpenGLView>
        </Grid>
    </Grid>
</UserControl>
