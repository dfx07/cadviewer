<UserControl x:Class="CadViewer.View.TabBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadViewer.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="TabBarItemStyle" TargetType="ListBoxItem">
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,0,0,1" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="xBorderItem" CornerRadius="0" MinWidth="60" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                BorderBrush="WhiteSmoke" Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="xBorderItem"
                                                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0" Value="#4d4d4d" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ThicknessAnimation Storyboard.TargetName="xBorderItem"
                                                Storyboard.TargetProperty="BorderThickness" To="1,1,1,0" Duration="0:0:0.04" />
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="xBorderItem"
                                                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0" Value="#3b4453" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Unselected" />
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="xBorderItem"
                                                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0" Value="#3b4453" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="SelectedUnfocused">
                                        <Storyboard>
                                            <ThicknessAnimation Storyboard.TargetName="xBorderItem"
                                                Storyboard.TargetProperty="BorderThickness"
                                                To="1,1,1,0" Duration="0"/>
                                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="xBorderItem"
                                                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                                <EasingColorKeyFrame KeyTime="0" Value="#3b4453" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid>
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                </ContentPresenter>
                                <Border x:Name="BottomLine" Margin="0,0,0,0" VerticalAlignment="Bottom"
                                    Height="2" Background="Transparent" Visibility="Collapsed" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="xBorderItem" Property="CornerRadius" Value="3,3,0,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabBarStyle" TargetType="ListBox">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource TabBarItemStyle}"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Background="Transparent" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Grid x:Name="xTabBarBorder">
                            <Border BorderBrush="WhiteSmoke" BorderThickness="0,0,0,1"/>
                            <Line x:Name="SelectionLine" X1="0" Y1="0" X2="0" Y2="0"
                                      Stroke="#3b4453" StrokeThickness="2"
                                      Visibility="Hidden"
                                      HorizontalAlignment="Stretch"/>
                            <ScrollViewer VerticalScrollBarVisibility="Hidden" 
                                          HorizontalScrollBarVisibility="Auto" 
                                          Focusable="false">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Grid>
                        <!--<ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="xBorderBar" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#71829f" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>-->
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border >
            <Grid>
                <ListBox x:Name="TabItems" Style="{StaticResource TabBarStyle}"
                    SelectionChanged="TabItems_SelectionChanged" 
                    HorizontalAlignment="Left" Width="Auto">
                    <ListBoxItem>Tab1</ListBoxItem>
                    <ListBoxItem>Tab2</ListBoxItem>
                    <ListBoxItem>Tab3</ListBoxItem>
                    <ListBoxItem>Tab4</ListBoxItem>
                    <!--<ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="123" FontWeight="Bold" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>-->
                </ListBox>

            </Grid>
        </Border>

    </Grid>
</UserControl>
