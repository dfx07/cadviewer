<local:RibbonControl x:Class="CadViewer.Views.RibbonViews.HomeRibbon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadViewer.Views.RibbonViews"
             xmlns:ui="clr-namespace:CadViewer.UIControls"
             xmlns:com="clr-namespace:CadViewer.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ui:CRibbonGroup Background="Transparent" Width="200" BorderThickness="0,0,1,0" BorderBrush="#222933">
            <ui:CRibbonGroup.RibbonGroupTitleContent>
                <TextBlock FontSize="11" Foreground="White" Text="Draw" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </ui:CRibbonGroup.RibbonGroupTitleContent>
            <ui:CRibbonGroup.Content>
                <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal">
                    <ui:CToggleButton Width="45" Height="45" ButtonStyle="Normal"
                                      BorderThickness="1" BorderBrush="#71829f" CornerRadius="5"
                                      Background="#3b4453" BackgroundOverColor="#566379" ImageSource="{com:PackImage Path=Assets/Images/cursor35.png}">
                    </ui:CToggleButton>
                    <Grid Width="2"></Grid>
                    <ui:CDropDownButton Width="45" Height="45" ButtonFlowDirection="Vertical">
                        <ui:CDropDownButton.Content>
                            <Border Padding="6">
                                <Image Source="{com:PackImage Path=Assets/Images/search26.png}" />
                            </Border>
                        </ui:CDropDownButton.Content>
                        <ui:CDropDownButton.DropDownContent>
                            <StackPanel Background="White">
                                <ui:CCheckBox Width="140" Height="24" CheckWidth="18" Content="Check box">
                                </ui:CCheckBox>
                                <ui:CCheckBox Width="140" Height="24" CheckWidth="18" Content="Check box">
                                </ui:CCheckBox>
                            </StackPanel>
                        </ui:CDropDownButton.DropDownContent>
                    </ui:CDropDownButton>
                </StackPanel>
            </ui:CRibbonGroup.Content>
        </ui:CRibbonGroup>
    </Grid>
</local:RibbonControl>
