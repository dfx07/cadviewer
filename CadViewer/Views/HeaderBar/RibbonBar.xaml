<UserControl x:Class="CadViewer.Views.BibbonBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadViewer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="PART_GridRibbonTab" Grid.Row="0" Background="#222933">
            <Border BorderBrush="#71829f" BorderThickness="0,0,0,1"/>
            <local:TabBar x:Name="xTabBar" RefTabBarInfos="{Binding TabBarInfos}"
                          SelectedTabBarInfo="{Binding SelectedTab, Mode=TwoWay}" Padding="10,2,0,0">
            </local:TabBar>
        </Grid>
        <Grid x:Name="PART_GridRibbonContent" Grid.Row="1" Background="#3b4453">
            <ContentPresenter HorizontalAlignment="Left" Content="{Binding RibbonContent, RelativeSource={RelativeSource AncestorType=local:BibbonBar}}" />
        </Grid>
    </Grid>
</UserControl>
