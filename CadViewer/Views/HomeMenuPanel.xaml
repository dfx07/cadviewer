<UserControl x:Class="CadViewer.Views.HomeMenuPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadViewer.Views"
             xmlns:ui="clr-namespace:CadViewer.UIControls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:rbviews="clr-namespace:CadViewer.Views.RibbonPanels"
             xmlns:vm="clr-namespace:CadViewer.ViewModels"
             xmlns:com="clr-namespace:CadViewer.Common" mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
    </UserControl.Resources>
    <UserControl.RenderTransform>
        <TranslateTransform x:Name="SlideTransform" X="-300" />
    </UserControl.RenderTransform>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border x:Name="PART_HomeMenuItems" Grid.Column="0" Background="WhiteSmoke" BorderThickness="0,0,1,0" BorderBrush="#222933">
            <StackPanel>
                <Grid x:Name="PART_HomeHeader" Height="35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ui:CButton x:Name="BackButton" Grid.Column="0" Background="Transparent" BorderThickness="0" 
                                ImageSource="{com:PackImage Path=Assets/Images/back_arrow35.png}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding ClickedBackButtonCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ui:CButton>
                    <TextBlock Grid.Column="1" Text="Home menu" FontSize="24" HorizontalAlignment="Center"></TextBlock>
                </Grid>
                <Border x:Name="PART_HomeContent" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Menu 1" FontSize="24"></TextBlock>
                        <TextBlock Text="Menu 2" FontSize="24"></TextBlock>
                        <TextBlock Text="Menu 3" FontSize="24"></TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        <Grid x:Name="PART_HomeMenuContent" Grid.Column="1" Background="#80000000">
        </Grid>
    </Grid>
</UserControl>
