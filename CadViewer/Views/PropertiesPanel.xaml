<UserControl x:Class="CadViewer.Views.PropertiesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadViewer.Views"
             xmlns:views_pro="clr-namespace:CadViewer.Views.Properties"
             xmlns:vm_pro="clr-namespace:CadViewer.ViewModels.Properties"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm_pro:CirclePropertyViewModel}">
            <views_pro:CirclePropertyView />
        </DataTemplate>
    </UserControl.Resources>

    <Border BorderBrush="Red" CornerRadius="3" BorderThickness="1">
        <ContentControl Content="{Binding CurrentPropertyView}" />
    </Border>
</UserControl>
